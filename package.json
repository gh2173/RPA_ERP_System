{

  "name": "tax-invoice-rpa",

  "version": "1.0.0",

  "description": "회계 자동화 RPA 프로그램",

  "main": "main.js",

  "scripts": {

    "start": "electron .",

    "build": "electron-builder",

    "build-win": "electron-builder --win",

    "build-mac": "electron-builder --mac",

    "dist": "npm run build"

  },

  "keywords": [

    "electron",

    "rpa",

    "automation",

    "tax",

    "invoice"

  ],

  "author": "네패스",

  "license": "ISC",

  "dependencies": {

    "clipboardy": "^4.0.0",

    "exceljs": "^4.4.0",

    "puppeteer": "^21.5.0",

    "puppeteer-extra": "^3.3.6",

    "puppeteer-extra-plugin-stealth": "^2.11.2",

    "winston": "^3.11.0",

    "xlsx": "^0.18.5"

  },

  "devDependencies": {

    "electron": "^25.9.8",

    "electron-builder": "^24.6.4"

  },

  "build": {

    "appId": "com.nepes.tax-invoice-rpa",

    "productName": "매입송장 RPA 처리기",

    "directories": {

      "output": "dist"

    },

    "asar": true,

    "win": {

      "target": "nsis",

      "sign": null,

      "signtool": null,

      "certificateFile": null,

      "certificatePassword": null

    },

    "nsis": {

      "oneClick": false,

      "allowToChangeInstallationDirectory": true

    },

    "extraMetadata": {

      "main": "main.js"

    },

    "publish": null

  }

}
 