{

  "name": "tax-invoice-rpa",

  "version": "1.0.0",

  "description": "회계 자동화 RPA 프로그램",

  "main": "main.js",

  "scripts": {

    "start": "electron .",

    "build": "electron-builder"

  },

  "keywords": [

    "electron",

    "rpa",

    "automation",

    "tax",

    "invoice"

  ],

  "author": "네패스",

  "license": "ISC",

  "dependencies": {

    "clipboardy": "^4.0.0",

    "exceljs": "^4.4.0",

    "puppeteer": "^21.5.0",

    "puppeteer-extra": "^3.3.6",

    "puppeteer-extra-plugin-stealth": "^2.11.2",

    "winston": "^3.11.0",

    "xlsx": "^0.18.5"

  },

  "devDependencies": {

    "electron": "^25.9.8",

    "electron-builder": "^24.6.4"

  },

  "build": {

    "appId": "com.nepes.tax-invoice-rpa",

    "productName": "매입송장 RPA 처리기",

    "directories": {

      "output": "dist"

    },

    "files": [

      "**/*",

      "EZVoucher.js",

      "EZVoucher2.js",

      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",

      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",

      "!**/node_modules/*.d.ts",

      "!**/node_modules/.bin"

    ],

    "win": {

      "target": [

        {

          "target": "nsis",

          "arch": ["x64"]

        },

        {

          "target": "portable",

          "arch": ["x64"]

        }

      ],

      "icon": "ERP_RPA아이콘.png",

      "publisherName": "네패스",

      "verifyUpdateCodeSignature": false

    },

    "nsis": {

      "oneClick": false,

      "allowToChangeInstallationDirectory": true,

      "allowElevation": true,

      "createDesktopShortcut": true,

      "createStartMenuShortcut": true,

      "shortcutName": "매입송장 RPA"

    },

    "portable": {

      "artifactName": "매입송장RPA-${version}-portable.exe"

    }

  }

}
 